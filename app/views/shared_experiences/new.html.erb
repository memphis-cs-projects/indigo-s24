<!-- app/views/shared_experiences/new.html.erb -->
<h1 style="font-size: 2.5rem; margin-bottom: 20px;">New Shared Experience</h1>

<%= bootstrap_form_with(model: @shared_experience, url: shared_experiences_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Title', style: 'font-size: 1.2rem; color: #333;' %>
    <%= form.text_field :title, class: 'form-control', style: 'font-size: 1rem; color: #666;' %>
  </div>
  <div class="form-group">
    <%= form.label :description, 'Description', style: 'font-size: 1.2rem; color: #333;' %>
    <%= form.text_area :description, class: 'form-control', style: 'font-size: 1rem; color: #666;' %>
  </div>
  <div class="form-actions">
    <%= form.submit 'Create Shared Experience', class: 'btn btn-primary', style: 'font-size: 1rem;' %>
  </div>
<% end %>
