<!-- app/views/orders/index.html.erb -->

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Items</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td>
          <ul>
            <% order.order_items.each do |order_item| %>
              <li><%= link_to order_item.caravan.name, caravan_path(order_item.caravan) %></li>
            <% end %>
          </ul>
        </td>
        <td><%= number_to_currency(order.total_price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
