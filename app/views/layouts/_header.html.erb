<header style="background-color: #f0f0f0; padding: 10px 0;">
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #f0f0f0;">
    <div class="container">
      <%= link_to 'Nomad\'s Haven', root_path, class: 'navbar-brand', style: 'font-size: 1.3rem; font-weight: bold; color: #333;' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="border-color: #333;">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav" style="justify-content: flex-end;">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
          <% if user_signed_in? && current_user.admin? %>
          <%= link_to 'Home', admin_dashboard_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
          </li>
          <% end %>
          <% if user_signed_in? && !current_user.admin? %>
            <%= link_to 'Home', root_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Cart', cart_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Orders', orders_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Nomad Connect', nomad_connect_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Shared Experiences', shared_experiences_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Settings', settings_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
          </li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link', style: 'font-size: 1rem; color: #333;', onmouseover: 'this.style.transform = "scale(1.1)";', onmouseout: 'this.style.transform = "scale(1)";' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
