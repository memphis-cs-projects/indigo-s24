<h1> Items in cart </h1>

<% if @cart_items.any? %>
  <% @cart_items.each do |item| %>
    <div>
      <%= item.caravan.name %>: <%= number_to_currency(item.caravan.price) %>
      <!-- Other item details here -->
    </div>
  <% end %>
<% else %>
  <p>No items in cart.</p>
<% end %>
<div class="container mt-3">
  <div class="row">
    <% @cart_items.each do |item| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <img src="<%= item.caravan.image.variant(resize: "100x100") %>" class="card-img-top" alt="<%= item.caravan.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= item.caravan.name %></h5>

            <p class="card-text">Price: <%= number_to_currency(item.price) %></p>
            <%= button_to 'Delete', cart_item_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
    </div>
    <div class="col text-right">
      <p>  'Proceed To Checkout' </p>
    </div>
  </div>
</div>
